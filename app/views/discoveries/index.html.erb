<div class="container mt-5 pt-4 mb-4">
    <h1 class="text-center mt-0 mb-3 instantgram font-weight-normal">Discoveries</h1>
    <div class='row row-cols-1 row-cols-md-2 row-cols-lg-3'>
        <% @posts.each do |post| %>
        <div class="col mb-4">
            <div class="bg-white border">
                    <div class="m-2 align-middle">
                        
                        <img class="custom-img1 mr-3" src="
                        <% if post.user.picture.present? %>
                            <%= post.user.picture %>
                        <% else %>
                            <%= "https://iconnect.gorsek.si/images/profile.png" %>
                        <% end %>
                        "
                            alt="profile-pic">
                        <%= link_to(profile_path(post.user.id)) do %>
                        <span class="font-weight-bolder fs-2 mt-1 color-black"><%= post.user.username %> </span>
                        <% end %> 
                        <span
                            class="float-right mt-2 mr-3"><%= post.locations.last.title %></span>
                    </div>
                <%= link_to(post) do %>
                <img class="img-fluid img-strech" src="<%= post.image %>" alt="post-pic">
                <% end %>
            </div>
        </div>
        <% end %> 

    </div>

</div>
