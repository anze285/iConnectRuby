<div class="login-main m-4 p-4">
    <div class="login-content">
        <h1 class="instantgram pb-4 mb-4 big-text">iConnect</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
          <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "form-control mb-1 w-75 mx-auto border bg-fafafa fs-1 py-2" %>
          </div>

          <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => "form-control mb-1 w-75 mx-auto border bg-fafafa fs-1 py-2" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :class => "fs-2 font-weight-100" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-primary w-75 mb-2 fs-1 font-weight-bolder bg-0095F6 p-1 first-button fs-2" %>
        </div>
        <% end %>

        <hr class="w-75 bc-dbdbdb mb-4">
        
        <br>
        
    </div>
    <div class="login-content d-flex justify-content-center align-items-center flex-column p-3 mb-0">
        <div class="">
            <p class="fs-2 mb-0 font-weight-100">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), :class => "fs-2 font-weight-600" %></p>
        </div>
    </div>
</div>
